{
    "compilerOptions": {
        "target": "es2022",
        "module": "CommonJs",
        "moduleResolution": "node",
        "types": ["node", "jest"],
        "allowJs": true,
        "strict": true,
        "esModuleInterop": true,
        "baseUrl": ".",
        "removeComments": true,
        "isolatedModules": true,
        "noEmit": true,
        "skipLibCheck": true,
        "outDir": "dist/",
        "checkJs": true,
        "paths": {
            "@api/*": ["./test_2/src/Api/*"],
            "@app/*": ["./test_2/src/App/*"],
            "@root/*": ["./test_2/src/*"]
          }
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "./dist",
        "./node_modules",
        "./test_1",
        "./test_2"
    ],
}